    cursor: default;

    @include media-query($small) {
        line-height: 40px;
    }

    .icon {
        width: 38px;
        height: 24px;
        fill: inherit;
    }
}

/*================ Social Icons ================*/

.social-icons {
    font-size: 0;
    display: block;
    position: relative;
}

.social-icon {
    display: inline-block;
    vertical-align: top;
}

.social-icons .icon {
    width: 30px;
    height: 30px;
    padding: 7px;
    font-size: $font-size-base;
    @include media-query($medium-up) {
        width: 40px;
        height: 40px;
        padding: 12px;
    }

    &.icon--wide {
        width: 40px;
    }
}

/*================ Loading Icons ================*/
.icon-spinner {
    @include animation(spin 500ms infinite linear);
}

/*================ Error Icons ================*/
.icon-error {
    fill: $color-error;
    width: em($font-size-base - 2px);
    height: em($font-size-base - 2px);
    margin-top: 0.1em;
    flex-shrink: 0;
}

/*================ #Lists ================*/
ul,
ol {
    margin: 0;
    padding: 0;
}

ol {
    list-style: decimal;
}

.list--inline {
    padding: 0;
    margin: 0;

    > li {
        display: inline-block;
        margin-bottom: 0;
        vertical-align: middle;
    }
}

/*================ #Rich Text Editor ================*/

.text-center.rte,
.text-center .rte {
    ul,
    ol {
        margin-left: 0;
        list-style-position: inside;
    }
}

// allows tables to scroll when needed since we don't know
// how many columns they will contain. Class added by JS.
.scrollable-wrapper {
    // sass-lint:disable no-misspelled-properties
    max-width: 100%;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}

/*================ Buttons ================*/
.btn {
    @include user-select();
    @include prefix(appearance, none, webkit moz spec);
    display: inline-block;
    width: auto;
    font-size: $font-size-header;
    text-decoration: none;
    text-align: center;
    vertical-align: middle;
    text-transform: uppercase;
    cursor: pointer;
    border-radius: $border-radius;
    padding:0 15px;
    height: 40px;
    line-height: 36px;
    font-family: $font-stack-header;
    font-style: $font-style-header;
    font-weight: 600;
    color: $color-btn-primary-text;
    background-color: $color-btn-primary-bg;
    border: 1px solid $color-btn-primary-border;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    letter-spacing: .2px;
    .icon-arrow-right,
    .icon-arrow-left {
        height: 9px;
    }
    &:focus {
        box-shadow: none;
    }
    &[disabled] {
        cursor: default;
        opacity: 0.5;
        pointer-events: none;
    }
    @media (min-width: 1025px) {
        height: 45px;
        line-height: 42px;
        padding: 0 35px;
    }
}

.btn-showmore {
    color: $color-btn-primary-text;
    background-color: $color-btn-primary-bg;
    border: 1px solid $color-btn-primary-border;
    &:hover {
        outline: none;
        color: $color-btn-secondary-text;
        background-color: $color-btn-secondary-bg;
        border-color: $color-btn-secondary-border;
    }
}

.btn--primary {
    &:hover {
        outline: none;
        color: $color-btn-secondary-text;
        background-color: $color-btn-secondary-bg;
        border-color: $color-btn-secondary-border;
    }
    &.address-delete {
        &:hover {
            color: #fff;
            background-color: #5a5a5a;
            border: 1px solid $color-btn-primary-border;
        }
    }
}
.btn-link {
    color: $color-btn-secondary-bg!important;
    border-bottom: 1px solid;
    text-decoration: none!important;
}

.btn-primary:not(:disabled):not(.disabled).active, 
.btn-primary:not(:disabled):not(.disabled):active, 
.show > .btn-primary.dropdown-toggle {
    outline: none;
    color: $color-btn-primary-text;
    border-color: $color-btn-primary-focus;
    background-color: $color-btn-primary-focus;

}

.login-form__content .btn--secondary {
    border: 1px solid $color-btn-secondary-border;
    &:hover {
        border-color: $color-btn-secondary-focus;
    }
