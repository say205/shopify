                            <span>
                                {% endraw %}
                                {{ 'products.product.detail' | t }}
                                {% raw %}
                            </span>
                        </a>
                    {{/if}}
                </div>
                {% endraw %}
                {% endif %}
                {% raw %}
            </div>
            <div class="product-card__content">
                {% endraw %}
