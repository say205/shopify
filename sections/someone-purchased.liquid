{% if section.settings.dpl_someone %}
<section class="product-notification" data-time="{{section.settings.someone_speed}}">
  <a href="javascript:void(0)" title="Close" class="close-window close-notifi">{% render 'icon-close' %}</a>
  <div class="product-suggest">
    <a class="product-image" href=""><img src="" alt=""></a>
    <div class="column-right">
      <label>{% render 'multilang' with section.settings.text %}</label>
      <a class="product-name" href=""></a>
      <div class="info">
        <span class="time-ago"></span> <span class="from-ago"></span>
      </div>      
    </div>
  </div>
  <div class="hide">
    {% for block in section.blocks %}    
      {%- assign product = all_products[block.settings.product] -%}
      <div class="data-product" data-id="{{block.id}}" data-image="{{product.featured_image.src | product_img_url: '100x' | split: '?' | first }}" data-url="{{ product.url | within: collection }}" data-title="{{ product.title | truncatewords: 4}}" data-alt="{{ product.title }}" data-local="{{block.settings.from_ago}}" data-time="{{block.settings.time_ago}}"></div>
    	
    {% endfor %}
  </div>
</section>
{% endif %}
{% schema %}
{
    "name": "Someone Purchased",
    "max_blocks": 10,
    "settings": [		
	  {
		"type" : "checkbox",
		"id" : "dpl_someone",
		"label" : "Display Someone Purchased",
		"default" : true
	  },
	  {
		"type" : "checkbox",
		"id" : "dpl_someone_mb",
		"label" : "Display Someone Purchased Popup on mobile",
		"default" : false
	  },
    {
      "type": "radio",
      "id": "show_someone",
      "label": "Show Someone Purchased on the",
      "options": [
      {
        "value": "left",
        "label": "Left"
      },
      {
        "value": "right",
        "label": "Right"
      }
      ],
        "default": "left"
      },
      {
        "type": "select",
        "id": "someone_speed",
        "label": "Change slides every",
        "options": [
          { "value": "5000", "label": "5 seconds" },
          { "value": "6000", "label": "6 seconds" },
          { "value": "7000", "label": "7 seconds" },
          { "value": "8000", "label": "8 seconds" },
          { "value": "9000", "label": "9 seconds" },
          { "value": "10000", "label": "10 seconds" },
    		  { "value": "60000", "label": "1 minutes" },
    		  { "value": "180000", "label": "3 minutes" }
        ],
          "default": "7000"
      },
      {
    		"type" : "text",
    		"id" : "text",
    		"label" : "Text Someone recently bought", 
    		"default" : "Someone recently bought"
      }
    ],
    "blocks" : [
      {
        "type" : "image",
        "name" : "Product",
        "settings":[
        	{
        		"type" : "product",
        		"id" : "product",
        		"label" :"Select Product"
        	},
          {
            "type" : "text",
            "id" : "time_ago",
            "default" : "43 minutes ago",
            "label" : "Purchase Time"
          },
		      {
            "type" : "text",
            "id" : "from_ago",
	          "default" : "Washington,",
            "label" : "Purchase Location"
          }
        ]
      }
    ]
}
{% endschema %}

{% if section.settings.dpl_someone %}
<script type="text/javascript">
  function SomeonePurchased() {
    {% unless section.settings.dpl_someone_mb %}
    if(window.innerWidth > 767 ){
    {% endunless %}
      if (jQuery.cookie('pr_notification') == 'closed') {
        jQuery('.product-notification').remove();
      }

      jQuery('.close-notifi').bind('click',function(){
        jQuery('.product-notification').remove();
        jQuery.cookie('pr_notification', 'closed', {expires:1, path:'/'});
      });  
      function toggleSomething() {

        if($('.product-notification').hasClass('active')){
          $('.product-notification').removeClass('active')
        }
        else{     
          var number=$('.data-product').length,
              i = Math.floor(Math.random() * number),         
              images = $('.product-notification .data-product:eq('+i+')').data('image'),
              title = $('.product-notification .data-product:eq('+i+')').data('title'),
              url = $('.product-notification .data-product:eq('+i+')').data('url'),
              local =  $('.product-notification .data-product:eq('+i+')').data('local'),
              times =$('.product-notification .data-product:eq('+i+')').data('time');

          $('.product-notification').addClass('active');
          $('.product-notification .product-image').find('img').attr('src', images );
          $('.product-notification .product-name').text(title).attr('href', url );
          $('.product-notification .product-image').attr('href', url );
          $('.product-notification .time-ago').text(times);
          $('.product-notification .from-ago').text(local);
        }
      }
      var time = $('.product-notification').data('time');
      var timer = setInterval(toggleSomething, time);
    {% unless section.settings.dpl_someone_mb %}
    }
    {% endunless %}
  }
  SomeonePurchased();
  $(document)
    .on( 'shopify:section:load', SomeonePurchased )
    .on( 'shopify:section:unload', SomeonePurchased)
</script>
{% endif %}



<style>
   @media (min-width: 1200px) {
    .product-notification{
      {% if section.settings.show_someone == 'right' %}
        right: 60px;
      {% else %}
        left: 60px;
      {% endif %}
    }
   }
  
  {% unless section.settings.dpl_someone_mb %}
    @media (max-width: 767px) {
      .product-notification{
        display:none;
      }
    }
  {% endunless %}
</style>
