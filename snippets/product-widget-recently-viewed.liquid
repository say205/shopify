<section class="recently-viewed-products" style="display: none;">
  
{% case section.settings.products_tab_results_per_row %}
  {% when '2' %}
    {%- assign rowlt = '2' -%}
    {%- assign row = 'two-items' -%}

  {% when '3' %}
    {%- assign rowlt = '3' -%}
    {%- assign row = 'three-items' -%}

  {% when '4' %}
    {%- assign rowlt = '4' -%}
    {%- assign row = 'four-items' -%}

  {% when '5' %}
    {%- assign rowlt = '4' -%}
    {%- assign row = 'five-items' -%}

  {% when '6' %}
    {%- assign rowlt = '4' -%}
    {%- assign row = 'six-items' -%}
{% endcase %}
  <div class="widget-product">
    <div class="products-grid row {{ row }}" data-infinite="false" data-row="{{ section.settings.products_tab_results_per_row }}" data-rowlt="{{rowlt}}" data-rowtb="4" data-rowtblg="3" data-rowbm="2" id="recently-viewed-products-grid"></div>
  </div>
</section>

<script>
  {% if settings.enable_multilang %}
  function splitTitle(title) {
    if (title.indexOf("|") < 0) 
      return title;
    var titleArr = title.split("|")[0];
    return titleArr;
  }

  function splitTitle2(title) {
    if (title.indexOf("|") < 0) 
      return title;
    var titleArr = title.split("|")[1];
    return titleArr;
  }
  
  {% else %}
  function splitTitle(title) {
    if (title.indexOf("|") < 0) 
      return title;
    var titleArr = title.split("|")[0];
    return titleArr;
  }
{% endif %}
</script>

